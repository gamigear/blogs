{
  "kind": "collectionType",
  "collectionName": "community_posts",
  "info": {
    "singularName": "community-post",
    "pluralName": "community-posts",
    "displayName": "Community Post",
    "description": "User-submitted community posts"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author"
    },
    "discourseTopicId": {
      "type": "integer"
    },
    "moderatorNotes": {
      "type": "text",
      "private": true
    }
  }
}
