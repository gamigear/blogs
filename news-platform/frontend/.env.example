# Strapi CMS
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your-strapi-api-token
USE_MOCK_DATA=true

# Keycloak SSO
KEYCLOAK_CLIENT_ID=news-frontend
KEYCLOAK_CLIENT_SECRET=your-keycloak-secret
KEYCLOAK_ISSUER=http://localhost:8080/realms/news-platform
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret

# Discourse
DISCOURSE_URL=http://localhost:3000
DISCOURSE_API_KEY=your-discourse-api-key
DISCOURSE_API_USERNAME=system
NEXT_PUBLIC_DISCOURSE_URL=http://localhost:3000

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# Redis Cache
REDIS_URL=redis://localhost:6379

# Revalidation
REVALIDATE_SECRET=your-revalidate-secret

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
