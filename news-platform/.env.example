# News Platform Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=newsplatform
DATABASE_USER=newsplatform
DATABASE_PASSWORD=your_secure_password_here

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# AUTHENTICATION (Keycloak)
# ===========================================
NEXTAUTH_URL=https://news.example.com
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars

KEYCLOAK_ISSUER=http://localhost:8080/realms/news-platform
KEYCLOAK_CLIENT_ID=news-platform-client
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret
KEYCLOAK_HOSTNAME=auth.example.com
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password

# ===========================================
# ALGOLIA SEARCH
# ===========================================
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key
ALGOLIA_ADMIN_KEY=your_algolia_admin_key

# ===========================================
# DISCOURSE FORUM
# ===========================================
DISCOURSE_URL=https://forum.example.com
DISCOURSE_API_KEY=your_discourse_api_key
DISCOURSE_API_USERNAME=system
DISCOURSE_WEBHOOK_SECRET=your_discourse_webhook_secret

# ===========================================
# S3-COMPATIBLE STORAGE
# ===========================================
S3_ENDPOINT=https://s3.example.com
S3_REGION=us-east-1
S3_BUCKET_NAME=news-platform
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
CDN_URL=https://cdn.example.com

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://news.example.com
NODE_ENV=production

# ===========================================
# SECURITY
# ===========================================
# Comma-separated list of allowed admin IPs (leave empty to allow all in dev)
ADMIN_IP_ALLOWLIST=

# ===========================================
# OPTIONAL: IMAGE OPTIMIZATION
# ===========================================
NEXT_PUBLIC_USE_IMAGE_OPTIMIZATION=true
IMAGE_CDN_URL=
