<div class="row">
    <div class="col-xxl-6">
        <div class="card custom-card overflow-hidden">
            <div class="card-header">
                <div class="card-title">
                    Recently Added Jobs
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Company</th>
                                <th scope="col">Job Role</th>
                                <th scope="col">Location</th>
                                <th scope="col">Job Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in RecentlyAddedJobs)
                            {
                                <tr class="@(job == RecentlyAddedJobs.Last() ? "border-bottom-0" : "")">
                                    <td class="@(job == RecentlyAddedJobs.Last() ? "border-bottom-0" : "")">
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="avatar avatar-sm bg-light avatar-rounded">
                                                <img src="@job.CompanyLogoUrl" alt="@job.CompanyName" />
                                            </span>
                                            <a href="javascript:void(0);" class="fw-medium">@job.CompanyName</a>
                                        </div>
                                    </td>
                                    <td class="@(job == RecentlyAddedJobs.Last() ? "border-bottom-0" : "")">@job.JobTitle</td>
                                    <td class="@(job == RecentlyAddedJobs.Last() ? "border-bottom-0" : "")">
                                        <span class="text-muted">
                                            <i class="ti ti-map-pin me-1 d-inline-block"></i>@job.Location
                                        </span>
                                    </td>
                                    <td class="@(job == RecentlyAddedJobs.Last() ? "border-bottom-0" : "")">
                                        <span class="badge @job.BadgeClass">@job.BadgeText</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    Acquisitions
                </div>
            </div>
            <div class="card-body">
                <div class="progress progress-md mb-4 mt-2">
                    @foreach(var item in Acquisitions)
                    {
                        <div class="progress-bar @item.ProgressBarClass" role="progressbar" 
                            style="width: @item.ProgressWidthPercent%" 
                            aria-valuenow="@item.ProgressWidthPercent" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    }
                </div>
                <ul class="list-group acquisitions-list mt-1">
                    @foreach(var item in Acquisitions)
                    {
                        <li class="list-group-item">
                            @item.Label
                            <span class="badge float-end @item.BadgeClass">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-xl-12">
        <div class="card custom-card overflow-hidden"> 
            <div class="card-header">
                <div class="card-title">
                    Recent Jobs
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush" id="recent-jobs">            
                    @foreach(var job in RecentJobs)
                    {
                        <li class="list-group-item border-start-0 border-end-0 @(job == RecentJobs.First() ? "border-top-0" : "") @(job == RecentJobs.Last() ? "border-bottom-0" : "")">
                            <a href="javascript:void(0);">
                                <div class="d-flex align-items-center flex-wrap">
                                    <div class="me-2 lh-1">
                                        <span class="avatar avatar-md avatar-rounded @job.AvatarClass">
                                            @job.Initials
                                        </span>
                                    </div>
                                    <div class="flex-fill">
                                        <p class="mb-0 fw-semibold">@job.Title</p>
                                        <p class="fs-12 text-muted mb-0">@job.Company - @job.TimeAgo</p>
                                    </div>
                                    <div class="text-end">
                                        <p class="mb-0 fs-12 @job.JobTypeClass">@job.JobType</p>
                                        <span class="badge @job.BadgeClass">@job.BadgeText</span>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End:: row-3 -->

