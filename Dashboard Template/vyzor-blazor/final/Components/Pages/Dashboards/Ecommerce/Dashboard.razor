@page "/ecommerce/dashboard"
@using ApexCharts


<!-- Start::page-header -->
<div class="page-header-breadcrumb mb-3">
    <div class="d-flex align-center justify-content-between flex-wrap gap-1">
        <h1 class="page-title fw-medium fs-18 mb-0">Dashboard</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript:void(0);">
                    Dashboards
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0);">
                    Ecommerce
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </div>
</div>
<!-- End::page-header -->

<!-- Start:: row-1 -->
<div class="row">
    <div class="col-xxl-6">
        <div class="row">
            @foreach (var card in DashboardStatCards)
            {
                <div class="col-lg-6">
                    <div class="card custom-card dashboard-main-card @card.BgColorClass">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h5 class="fw-semibold">@card.Value</h5>
                                    <span class="d-block fs-12 text-muted">@card.Title</span>
                                </div>
                                <div>
                                    <span class="avatar avatar-lg bg-@card.BgColorClass-transparent svg-@card.BgColorClass">
                                        @if (!string.IsNullOrEmpty(card.Svg))
                                        {
                                            @((MarkupString)card.Svg)
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">
                            Sales Statistics
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row sales-stats mb-3">
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div>Orders</div>
                                <div class="d-flex align-items-center gap-1">
                                    <span class="fs-16 fw-semibold">3,542</span>
                                    <span class="text-success"><i class="ti ti-arrow-narrow-up align-middle"></i>
                                        <span class="badge bg-success-transparent">0.9%</span></span>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div>Revenue</div>
                                <div class="d-flex align-items-center gap-1">
                                    <span class="fs-16 fw-semibold">$52,38,346</span>
                                    <span class="text-success"><i class="ti ti-arrow-narrow-up align-middle"></i>
                                        <span class="badge bg-success-transparent">0.39%</span></span>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div>Conversion Ratio</div>
                                <div class="mb-0">
                                    <span class="fs-16 fw-semibold text-secondary">33.7%</span>
                                    <span class="text-success"><i class="ti ti-arrow-narrow-up align-middle"></i>
                                        <span class="badge bg-success-transparent">0.5%</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div id="sale-stats">
                            <ApexChart TItem="Earnings"  Height="320" Options=EarningsChartOptions>
                                <ApexPointSeries TItem="Earnings" Items="earnings" SeriesType="@SeriesType.Bar" Name="Profit"
                                    XValue="@(e => e.Month)" YAggregate="@(e => e.Sum(e => e.Profit))"/>
                                <ApexPointSeries TItem="Earnings" Items="earnings" SeriesType="@SeriesType.Area" Name="Sales"
                                    XValue="@(e => e.Month)" YAggregate="@(e => e.Sum(e => e.Sales))"/>
                                <ApexPointSeries TItem="Earnings" Items="earnings" SeriesType="@SeriesType.Line" Name="Revenue"
                                    XValue="@(e => e.Month)" YAggregate="@(e => e.Sum(e => e.Revenue))"/>
                            </ApexChart>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-12">
                <div class="card custom-card overflow-hidden">
                    <div class="card-header">
                        <div class="card-title">
                            Top Selling Products
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table text-nowrap">
                                <thead>
                                    <tr>
                                        <th>s.no</th>
                                        <th>Product Category</th>
                                        <th class="text-center">Sale Value</th>
                                        <th class="text-center">Total Sales</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in TopSellingProductsData)
                                    {
                                        <tr class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0" : "")">
                                            <td class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0" : "")">@product.Id</td>
                                            <td class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0" : "")">
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="lh-1">
                                                        <span class="avatar avatar-sm avatar-rounded bg-light">
                                                            <img src="@product.ImageUrl" alt="@product.Title" />
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <span class="fw-semibold">@product.Title</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0 text-center" : "text-center")">
                                                @product.Price
                                            </td>
                                            <td class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0 text-center" : "text-center")">
                                                @product.SalesCount
                                            </td>
                                            <td class="@(product.Id == TopSellingProductsData.Last().Id ? "border-bottom-0" : "")">
                                                <span class="badge @(product.StockStatus == "In Stock" ? "bg-success-transparent" : "bg-danger-transparent")">
                                                    @product.StockStatus
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3">
        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">
                            Recent Orders
                        </div>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled ecommerce-recent-orders-list">
                            @foreach (var order in RecentOrdersData)
                            {
                                <li>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="lh-1">
                                            <span class="avatar avatar-md">
                                                <img src="@order.ImageUrl" alt="@order.ProductName">
                                            </span>
                                        </div>
                                        <div class="flex-fill">
                                            <span class="d-block fw-semibold">
                                                <a href="javascript:void(0);">@order.ProductName</a>
                                            </span>
                                            <span class="text-muted fs-12">@order.Category</span>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-semibold">@order.Price</div>
                                            <span class="fs-12 text-muted">Price</span>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">
                            Top Categories
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="top-categories">
                        <ApexChart TItem="PieSimplechart" Options=PieSimplechartOptions Height="255">
                            <ApexPointSeries TItem="PieSimplechart" Items="PieSimplecharts" Name="Team" SeriesType="SeriesType.Donut" XValue="@(e => e.SimpleSeries)" YAggregate="@(e => e.Sum(e => e.SimpleValue))" />
                        </ApexChart>
                        </div>
                        <ul class="list-unstyled top-categories-list mt-3">
                            <li>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="flex-fill">Mobile</div>
                                    <div class="fw-semibold">$46,000</div>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="flex-fill">Desktop</div>
                                    <div class="fw-semibold">$28,500</div>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="flex-fill">Tablet</div>
                                    <div class="fw-semibold">$24,500</div>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="flex-fill">Others</div>
                                    <div class="fw-semibold">$19,600</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">
                            Top Countries By Sales
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3 flex-wrap">
                            <div>
                                <h4 class="mb-0 lh-1">38,256</h4>
                            </div>
                            <div><span class="badge bg-primary-transparent ms-2 me-1">12.24%</span><span
                                    class="text-muted fs-11">Since last week</span></div>
                        </div>
                        <ul class="pt-2 list-unstyled top-country-sales-list">
                            @foreach (var country in TopCountriesBySales)
                            {
                                <li class="@(country == TopCountriesBySales.Last() ? "mb-0" : "")">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center lh-1 gap-2">
                                            <span class="avatar avatar-xs avatar-rounded">
                                                <img src="@country.FlagImageSrc" alt="@country.CountryName" />
                                            </span>
                                            <span class="top-country-name">@country.CountryName</span>
                                        </div>
                                        <div>
                                            @if (country.IsTrendingUp)
                                            {
                                                <i class="ti ti-trending-up fs-16 text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="ti ti-trending-down fs-16 text-danger"></i>
                                            }
                                        </div>
                                        <div class="fs-14">@country.SalesCount.ToString("N0")</div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3">
        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card atm-card border-0 overflow-hidden">
                    <div class="card-body">
                        <div class="atm-card-background-container">
                            <img src="../assets/images/ecommerce/png/21.png" alt="">
