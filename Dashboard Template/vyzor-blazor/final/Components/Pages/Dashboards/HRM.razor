                           @foreach (var Data in DashboardCardsData)
                           {
                             <div class="col-xl-6 ">
                                <div
                                    class="card custom-card dashboard-main-card border-0 shadow-none mb-0 rounded-0 
                                    @(Data.Id == 1? "border-lg-end border-bottom" :
                                      Data.Id == 2? "border-bottom" :
                                      Data.Id == 3? "border-lg-end" :
                                      "")">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <span
                                                class="avatar avatar-lg avatar-rounded bg-@Data.AvatarBgColor-transparent svg-@Data.AvatarBgColor">
                                                @((MarkupString)(Data.IconSvg ?? ""))
                                            </span>
                                        </div>
                                        <div class="text-muted mb-2">
                                            @Data.Title
                                        </div>
                                        <div class="d-flex align-items-end gap-2 flex-wrap">
                                            <h5 class="fw-semibold mb-0 lh-1">@Data.Value</h5>
                                            <div>
                                                <span class="badge bg-@Data.PercentBgColor-transparent rounded-pill">
                                                    <i class="ti ti-arrow-@Data.PercentChangeDir me-1"></i>@Data.ChangePercentage
                                                </span>
                                                <span class="text-muted fs-12">@Data.Period</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-12">
