                                            <span class="avatar avatar-md bg-light p-1 avatar-rounded">
                                                <img src="@Data.AvatarUrl" alt="">
                                            </span>
                                            <div>
                                                <p class="fw-medium mb-0">@Data.Name</p>
                                                <span class="text-muted fs-12">@Data.Role</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @Data.Time
                                    </td>
                                    <td>
                                        <span class="badge bg-@Data.StatusBgColor-transparent rounded-pill min-w-badge">@Data.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End:: row-2 -->

