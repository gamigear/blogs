                <div id="attendance-overview">
                    <ApexChart TItem="PieSimplechart" Options=PieSimplechartOptions Height="260">
                        <ApexPointSeries TItem="PieSimplechart" Items="PieSimplecharts" Name="Attendance Overview" SeriesType="SeriesType.Donut" XValue="@(e => e.Status)" YAggregate="@(e => e.Sum(e => e.SimpleValue))" />
                    </ApexChart>
                </div>
                <ul class="list-unstyled my-4 hrm-attendance-overview-list">
                    <li>
