@code {
    public WMBSCInitialSettings? BasicConfigurations;
    public WMBSCInitialSettings? NavigationConfigurations;
    public WMBSCInitialSettings? PaginationConfigurations;
    public WMBSCInitialSettings? DynamicPaginationConfigurations;
    public WMBSCInitialSettings? ProgressConfigurations;
    public WMBSCInitialSettings? PaginationFractionConfigurations;
    public WMBSCInitialSettings? CustomPaginationConfigurations;
    public WMBSCInitialSettings? LazyLoadConfigurations;
    public WMBSCInitialSettings? VerticalConfigurations;
    public WMBSCInitialSettings? KeyboardConfigurations;
    public WMBSCInitialSettings? FadeEffectConfigurations;
    public WMBSCInitialSettings? LinearConfigurations;
    public WMBSCInitialSettings? ResponsiveConfigurations;
    public BlazorSlickCarousel? theCarousel;
    public WMBSCInitialSettings? CallBackConfigurations;
    
    protected override void OnInitialized()
    {
        BasicConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = false,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
        };

        NavigationConfigurations = new WMBSCInitialSettings
        {
            arrows = true,
            dots = false,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            prevArrow = "<button type='button' class='slick-prev'></button>",
            nextArrow = "<button type='button' class='slick-next'></button>",
        };

        PaginationConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
        };

        DynamicPaginationConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            dotsClass = "slick-dots Dynamic-slick-dots",
            autoplaySpeed = 1500,
        };

        ProgressConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = false,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            pauseOnFocus = true,
        };

        PaginationFractionConfigurations = new WMBSCInitialSettings
        {
            arrows = true,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            dotsClass = "slick-dots Fraction-slick-dots",
            autoplaySpeed = 1500,
            variableWidth = true,
        };

        CustomPaginationConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            dotsClass = "slick-dots Custom-slick-dots",
            autoplaySpeed = 1500,
        };

        LazyLoadConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = false,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            lazyLoad = "ondemand"
        };

        VerticalConfigurations = new WMBSCInitialSettings
        {
            vertical = true,
            verticalSwiping = true,
            arrows = false,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            dotsClass = "slick-dots Vertical-slick-dots",
        };

        KeyboardConfigurations = new WMBSCInitialSettings
        {
            arrows = true,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
        };

        FadeEffectConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = true,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            fade = true,
        };

        LinearConfigurations = new WMBSCInitialSettings
        {
            arrows = false,
            dots = false,
            slidesToShow = 1,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            cssEase = "ease",
            easing = "linear",
        };

        // to <= 800px screen
        WMBSCSettings breakpoint800Settings = new WMBSCSettings
        {
            slidesToShow = 2,
            arrows = true,
        };
        WMBSCResponsiveSettings breakpoint800Responsive = new WMBSCResponsiveSettings
        {
            breakpoint = 800,
            settings = breakpoint800Settings
        };
        // to <= 400px screen
        WMBSCSettings breakpoint400Settings = new WMBSCSettings
        {
            slidesToShow = 1,
            arrows = true
        };
        WMBSCResponsiveSettings breakpoint400Responsive = new WMBSCResponsiveSettings
        {
            breakpoint = 400,
            settings = breakpoint400Settings
        };
        // add responsivity
        List<WMBSCResponsiveSettings> responsiveSettingsList = new List<WMBSCResponsiveSettings>();
        responsiveSettingsList.Add(breakpoint800Responsive);
        responsiveSettingsList.Add(breakpoint400Responsive);
        ResponsiveConfigurations = new WMBSCInitialSettings
            {
                arrows = true,
                dots = false,
                slidesToShow = 4,
                slidesToScroll = 1,
                infinite = true,
                autoplay = true,
                autoplaySpeed = 1500,
                responsive = responsiveSettingsList,
            };

        CallBackConfigurations = new WMBSCInitialSettings
        {
            arrows = true,
            dots = false,
            slidesToShow = 4,
            slidesToScroll = 1,
            infinite = true,
            autoplay = true,
            autoplaySpeed = 1500,
            responsive = responsiveSettingsList,
        };
    }

    public async void ShowCurrentSlideIndex()
    {
        if(theCarousel != null){
            int currentSlide = await theCarousel.CurrentSlide();
        }
    }

    public async void GoTo(int slideNumber)
    {
        if(theCarousel != null){
        await theCarousel.GoTo(slideNumber);
        }
    }

    public async void Next()
    {
        if(theCarousel != null){
            await theCarousel.Next();
        }
    }

    public async void Prev()
    {
        if(theCarousel != null){
            await theCarousel.Prev();
        }
    }

    public async void Add()
    {
        if(theCarousel != null){
            await theCarousel.Add("<div><img src='../assets/images/media/media-42.jpg' /></div>");
        }
    }

    public async void Remove(int slideNumber, bool removeBefore)
    {
        if(theCarousel != null){
            await theCarousel.Remove(slideNumber, removeBefore);
        }
    }

    public async void Destroy()
    {
        if(theCarousel != null){
            await theCarousel.Destroy();
        }
    }

    public async void Constroy()
    {
        if(theCarousel != null){
            await theCarousel.Constroy(theCarousel.Configurations);
        }
    }
    
}