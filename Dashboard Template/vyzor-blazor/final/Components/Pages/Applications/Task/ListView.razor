                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="ti ti-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="javascript:void(0);">New Tasks</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0);">Pending Tasks</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0);">Completed Tasks</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0);">Inprogress Tasks</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <input class="form-check-input check-all" type="checkbox" id="all-tasks" value=""
                                    aria-label="..." @bind="@selectAll" @onclick="ToggleSelectAll">
                            </th>
                            <th scope="col">Task</th>
                            <th scope="col">Task ID</th>
                            <th scope="col">Assigned Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Priority</th>
                            <th scope="col">Assigned To</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach(var task in TaskListData)
                    {
                        <tr class="task-list">
                            <td class="task-checkbox">
                                <input class="form-check-input" type="checkbox" value=""
                                    aria-label="..." @bind="@task.Selected">
                            </td>
                            <td>
                                <a href="javascript:void(0);" class="fw-medium" data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">@task.Title</a>
                            </td>
                            <td>
                                <span class="fw-medium">SPK-1001</span>
                            </td>
                            <td>
                                @task.AssignedDate
                            </td>
                            <td>
                                <span class="fw-medium text-@(task.Status == "In Progress" ? "orange" : task.Status == "Pending" ? "info" : "success" )">@task.Status</span>
                            </td>
                            <td>
                                @task.DueDate
                            </td>
                            <td>
                                <span class="badge bg-@(task.Priority == "High" ? "danger" : task.Priority == "Medium" ? "warning" : "teal" )-transparent">@task.Priority</span>
                            </td>
                            <td>
                                <div class="avatar-list-stacked">
                                    @if (task?.AssignedTo != null)
                                    {
                                        @foreach(var avatar in task.AssignedTo)
                                        {
                                            <span class="avatar avatar-sm avatar-rounded">
                                                <img src="@avatar.Img" alt="img">
                                            </span>
                                        }
                                        @if (task.RemainingAvatarCount > 0)
                                        {
                                            <a class="avatar avatar-sm bg-primary avatar-rounded text-fixed-white" href="javascript:void(0);">
                                                @("+" + task.RemainingAvatarCount)
                                            </a>
                                        }
                                    }
                                </div>
                            </td>

                            <td>
                                <button class="btn btn-primary-light btn-icon btn-sm" data-bs-toggle="tooltip"
                                    data-bs-placement="top" data-bs-title="Edit"><i class="ri-edit-line"></i></button>
                                @if (task != null)
                                {
                                    <button class="btn btn-danger-light btn-icon ms-1 btn-sm task-delete-btn" @onclick="@(() => DeleteTaskList(task!.Id))">
                                        <i class="ri-delete-bin-5-line"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer border-top-0">
            <nav aria-label="Page navigation" class="pagination-style-2">
                <ul class="pagination mb-0 flex-wrap justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" href="javascript:void(0);">
