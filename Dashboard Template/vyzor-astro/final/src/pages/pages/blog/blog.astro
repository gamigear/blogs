---
import { Image } from "astro:assets";
import Layout from "../../../layouts/Layout.astro";
import Pageheader from "../../../components/Pageheader.astro";
import {
    BlogCards,
    BlogCategoryCards,
    BlogPosts,
    PopularBlogs,
    TopStories,
} from "../../../shared/data/pages/blog/blogdata";
import SpkBlogcard from "../../../shared/@spk-reusable-components/reusable-pages/blog/spk-blogcard.astro";
import blog1 from "../../../assets/images/media/blog/1.jpg";
import SpkPopularcard from "../../../shared/@spk-reusable-components/reusable-pages/blog/spk-popularcard.astro";
const basePath = import.meta.env.BASE_URL;
---

<Layout Seo="Blog">
    <Pageheader
        title="Pages"
        subtitle="Blog"
        currentpage="Blog"
        activepage="Blog"
    />

    <!-- Start:: row-1 -->
    <div class="row">
        <div class="col-xxl-5">
            <div class="card custom-card overlay-card blog-card">
                <a href={`${basePath}pages/blog/blog-details/`} class="stretched-link"></a>
                <img src={blog1.src} class="card-img" alt="..." />
                <div
                    class="card-img-overlay d-flex flex-column p-0 over-content-bottom"
                >
                    <div class="card-body text-fixed-white">
                        <div class="text-fixed-white fs-14 mb-2">
                            FEATURED POST
                        </div>
                        <div class="card-text mb-2 fs-2 fw-semibold lh-sm">
                            Exploring the Future of Artificial Intelligence
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-4">
            <div class="row">
                {
                    BlogPosts.map((idx) => (
                        <div class="col-xl-6">
                            <SpkBlogcard blog={idx} />
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="col-xxl-3">
            <div class="card custom-card">
                <div class="card-header justify-content-between">
                    <div class="card-title">Top Stories</div>
                    <a
                        href="javascript:void(0);"
                        class="fs-13 text-muted text-decoration-underline"
                        >View All <i class="ti ti-arrow-narrow-right"></i></a
                    >
                </div>
                <div class="card-body">
                    <ul class="list-unstyled blog-top-stories-list">
                        {
                            TopStories.map((story) => (
                                <li>
                                    <a
                                        href={`${basePath}pages/blog/blog-details/`}
                                        class="stretched-link"
                                    />
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="lh-1">
                                            <span class="avatar avatar-xl">
                                                <img
                                                    src={story.image.src}
                                                    alt={story.title}
                                                />
                                            </span>
                                        </div>
                                        <div class="flex-fill">
                                            <span
                                                class={`badge ${story.badgeClass}`}
                                            >
                                                {story.badgeText}
                                            </span>
                                            <h6 class="fw-semibold mb-0 lh-base top-stories-title mt-1">
                                                {story.title}
                                            </h6>
                                        </div>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End:: row-1 -->

    <!-- Start:: row-2 -->
    <div class="col-xl-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-semibold">Popular Topics</h5>
            <p class="mb-0 fw-semibold">
                <a href="javascript:void(0);" class="text-primary"
                    ><u>View All</u></a
                >
            </p>
        </div>
        <div class="popular-cards align-items-center d-flex gap-3 flex-wrap justify-content-between">
            {
                BlogCategoryCards.map((idx) => (
                    <div class="col">
                        <SpkPopularcard blog={idx} />
                    </div>
                ))
            }
        </div>
    </div>
    <!-- End:: row-2 -->

    <!-- Start:: row-3 -->
    <div class="row">
        <div class="col-xxl-9">
            <div class="row">
                {
                    BlogCards.map((idx) => (
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <SpkBlogcard blog={idx} />
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="col-xxl-3">
            <div class="card custom-card overflow-hidden">
                <div class="card-header justify-content-between">
                    <div class="card-title">Popular Blogs</div>
                    <a
                        href="javascript:void(0);"
                        class="fs-13 text-muted text-decoration-underline"
                        >View All <i class="ti ti-arrow-narrow-right"></i></a
                    >
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {
                            PopularBlogs.map((blog) => (
                                <li class="list-group-item">
                                    <a
                                        href={`${basePath}pages/blog/blog-details`}
                                        class="stretched-link"
                                    />
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="lh-1">
                                            <span class="avatar avatar-xl">
                                                <img
                                                    src={blog.image.src}
                                                    alt={blog.title}
                                                />
                                            </span>
                                        </div>
                                        <div class="flex-fill">
                                            <div class="popular-blogs-title fw-semibold mb-1">
                                                {blog.title}
                                            </div>
                                            <span class="d-block text-muted fs-13 fw-normal">
                                                {blog.dateViews}
                                            </span>
                                        </div>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End:: row-3 -->

    <script>
        import "../../../scripts/js/custom.js";
    </script>
</Layout>
