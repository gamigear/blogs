---
import Authentication from "../../../layouts/authentication.astro";
import { Image } from "astro:assets";
import BG10 from "../../../assets/images/media/backgrounds/10.svg";
import BG11 from "../../../assets/images/media/backgrounds/11.png";
---

<Authentication Seo="404-Error">
    <div class="page error-bg">
        <div class="error-page-background">
            <Image src={BG10} alt="" />
        </div>
        <!-- Start::error-page -->
        <div class="row align-items-center justify-content-center h-100 g-0">
            <div class="col-xl-7 col-lg-7 col-md-7 col-12">
                <div class="text-center">
                    <div class="text-center mb-5">
                        <Image
                            src={BG11}
                            alt=""
                            class="w-sm-auto w-100 h-100"
                        />
                    </div>
                    <span class="d-block fs-4 text-primary fw-semibold"
                        >Oops! Something Went Wrong</span
                    >
                    <p class="error-text mb-0">404</p>
                    <p class="fs-5 fw-normal mb-3">
                        There was an issue with the page. Try again <br /> later
                        or contact support.
                    </p>
                    <a class="btn btn-primary btn-w-lg" href="/">Back to home<i class="ti ti-arrow-narrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </div>
</Authentication>
