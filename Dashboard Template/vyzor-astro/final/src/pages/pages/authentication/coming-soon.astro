---
import Authentication from "../../../layouts/authentication.astro";
import { Image } from "astro:assets";
import background9 from "../../../assets/images/media/backgrounds/9.png";
import logo1 from "../../../assets/images/brand-logos/desktop-dark.png";
import logo2 from "../../../assets/images/brand-logos/desktop-logo.png";
const basePath = import.meta.env.BASE_URL;
---

<Authentication Seo="coming-soon" bodyClass="coming-soon-main">
    <div class="coming-soon-background">
        <img src={background9.src} alt="background9" />
    </div>
    <div class="row authentication coming-soon g-0 my-4 justify-content-center">
        <div
            class="col-xxl-7 col-xl-7 col-lg-7 col-md-7 col-sm-7 col-11 my-auto"
        >
            <div class="authentication-cover text-center">
                <div class="authentication-cover-content">
                    <div
                        class="row justify-content-center align-items-center mx-0 g-0"
                    >
                        <div
                            class="col-xxl-7 col-xl-7 col-lg-7 col-md-12 col-sm-12 col-12"
                        >
                            <div>
                                <div class="mb-3">
                                    <a href={basePath}>
                                        <img
                                            src={logo2.src}
                                            alt="logo2"
                                            class="authentication-brand"
                                        />
                                        <img
                                            src={logo1.src}
                                            alt="logo1"
                                            class="authentication-brand dark"
                                        />
                                    </a>
                                </div>
                                <h1 class="mb-0">Coming Soon</h1>
                                <div
                                    class="d-flex gap-5 flex-wrap gy-xxl-0 gy-3 justify-content-center my-4 rounded p-4 timer-container"
                                    id="timer"
                                >
                                </div>
                                <p class="mb-4 fs-18">
                                    Big things are coming your way! We're
                                    putting the final touches <br /> on something
                                    amazing. Stay tuned!
                                </p>
                                <div class="input-group">
                                    <input
                                        type="email"
                                        class="form-control form-control-lg"
                                        placeholder="info@gmail.com"
                                        aria-label="info@gmail.com"
                                        aria-describedby="button-addon2"
                                    />
                                    <button
                                        class="btn btn-primary btn-lg"
                                        type="button"
                                        id="button-addon2">Subscribe</button
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            import "../../../scripts/js/coming-soon.js";
        </script>
    </div></Authentication
>
