---
import { Image } from "astro:assets";
const { search, cardClass = "" } = Astro.props;
---

<div class={`card custom-card shadow-none ${cardClass}`}>
    <div class="card-body">
        <div
            class="d-flex align-items-start flex-wrap gap-3 justify-content-between"
        >
            <div class="d-flex align-items-center">
                <div>
                    <span
                        class={`avatar avatar-lg avatar-rounded bg-${search.bgColor} bg-opacity-10 border`}
                    >
                        <Image src={search.imgSrc} alt="" />
                    </span>
                </div>
                <div class="ms-2">
                    <h6 class="fw-medium mb-0 d-flex align-items-center">
                        <a href="javascript:void(0);">{search.title}</a>
                    </h6>
                    <a href="javascript:void(0);">{search.subTitle}</a>
                </div>
            </div>
            <div class="btn-list">
                <a
                    href="javascript:void(0);"
                    class="btn btn-sm btn-icon btn-light"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    aria-label="Add to favourite"
                    data-bs-original-title="Add to favourite"
                    ><span
                        ><i class="ri-heart-3-fill align-middle text-muted"
                        ></i></span
                    ></a
                >
                <a
                    href="javascript:void(0);"
                    class="btn btn-sm btn-icon btn-warning-light"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    aria-label="Featured Book"
                    data-bs-original-title="Featured Book"
                    ><span><i class="ri-star-fill"></i></span></a
                >
            </div>
        </div>
        <div class="popular-tags my-3">
            {
                search.tags.map((tag) => (
                    <a
                        href="javascript:void(0);"
                        class="badge rounded-pill bg-light text-default me-1"
                    >
                        {tag}
                    </a>
                ))
            }
        </div>
        <div class="d-flex justify-content-between flex-wrap gap-2">
            <div>
                <span class="text-muted">Published On</span> - <span
                    class="fw-medium mb-0">{search.date}</span
                >
            </div>
            <a
                href="javascript:void(0);"
                class="text-primary fw-semibold fs-14"
            >
                Preview <i class="fe fe-arrow-right"></i>
            </a>
        </div>
    </div>
</div>
