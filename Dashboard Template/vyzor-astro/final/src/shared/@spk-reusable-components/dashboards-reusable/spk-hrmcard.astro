---
const { cardClass, bodyClass, hrm } = Astro.props;
---

<div class={`card custom-card ${cardClass}`}>
    <div class={`card-body ${bodyClass}`}>
        <div class="mb-3">
            <span
                class={`avatar avatar-lg avatar-rounded bg-${hrm.svgColor}-transparent svg-${hrm.svgColor}`}
                set:html={hrm.svgIcon}
            />
        </div>
        <div class="text-muted mb-2">{hrm.title}</div>
        <div class="d-flex align-items-end gap-2 flex-wrap">
            <h5 class="fw-semibold mb-0 lh-1">{hrm.value}</h5>
            <div>
                <span
                    class={`badge bg-${hrm.iconColor}-transparent rounded-pill`}
                >
                    <i class={hrm.iconClass}></i>{hrm.percent}
                </span>
                <span class="text-muted fs-12">{hrm.year}</span>
            </div>
        </div>
    </div>
</div>
