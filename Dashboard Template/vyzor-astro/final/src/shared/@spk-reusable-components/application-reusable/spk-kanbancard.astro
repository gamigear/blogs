---
import { Image } from "astro:assets";
const { cardClass, kanban } = Astro.props;
---

<div class={`card custom-card ${cardClass}`}>
    <div class="card-body p-0">
        <div class="p-3 kanban-board-head">
            <div
                class="d-flex text-muted justify-content-between mb-1 fs-12 fw-medium"
            >
                <div>
                    <i class="ri-time-line me-1 align-middle d-inline-block"
                    ></i>Created - {kanban.createdDate}
                </div>
                <div>2 days left</div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
                <div class="task-badges">
                    {
                        kanban.tags.map((tag, index) => (
                            <span class={`badge ${index !== 0 ? "ms-1" : ""}`}>
                                {tag}
                            </span>
                        ))
                    }
                </div>
                <div class="dropdown">
                    <a
                        aria-label="anchor"
                        href="javascript:void(0);"
                        class="btn btn-icon btn-sm btn-white border"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        <i class="fe fe-more-vertical"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="javascript:void(0);"
                                ><i
                                    class="ri-eye-line me-1 align-middle d-inline-block"
                                ></i>View</a
                            >
                        </li>
                        <li>
                            <a class="dropdown-item" href="javascript:void(0);"
                                ><i
                                    class="ri-delete-bin-line me-1 align-middle d-inline-block"
                                ></i>Delete</a
                            >
                        </li>
                        <li>
                            <a class="dropdown-item" href="javascript:void(0);"
                                ><i
                                    class="ri-edit-line me-1 align-middle d-inline-block"
                                ></i>Edit</a
                            >
                        </li>
                    </ul>
                </div>
            </div>
            {
                kanban.Content && (
                    <div class="kanban-content mt-2">
                        <h6 class="fw-medium mb-1 fs-15">{kanban.title}</h6>
                        <div class="kanban-task-description">
                            {kanban.description}
                        </div>
                    </div>
                )
            }
            {
                kanban.imgSrc && (
                    <div class="kanban-content mt-2">
                        <div class="task-image mt-2">
                            <Image
                                src={kanban.src}
                                class="img-fluid rounded kanban-image"
                                alt=""
                            />
                        </div>
                        <h6 class="fw-medium mt-2 mb-0">{kanban.title}</h6>
                    </div>
                )
            }
        </div>
        <div class="p-3 border-top border-block-start-dashed">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <a href="javascript:void(0);" class="me-2 text-primary">
                        <span class="me-1"
                            ><i class="ri-thumb-up-fill align-middle fw-normal"
                            ></i></span
                        ><span class="fw-medium fs-12">{kanban.likes}</span>
                    </a>
                    <a href="javascript:void(0);" class="text-muted">
                        <span class="me-1"
                            ><i class="ri-message-2-line align-middle fw-normal"
                            ></i></span
                        ><span class="fw-medium fs-12">{kanban.comments}</span>
                    </a>
                </div>
                <div class="avatar-list-stacked">
                    {
                        kanban.avatars.map((src, index) => (
                            <span class="avatar avatar-sm avatar-rounded">
                                <Image src={src} alt={`avatar-${index}`} />
                            </span>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</div>
