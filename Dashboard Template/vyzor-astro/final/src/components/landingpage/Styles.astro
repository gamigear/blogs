---
import "../../styles/scss/styles.scss";
import "../../styles/scss/icon.scss";
import "../../styles/scss/switcher.scss";
import "../../scripts/libs/node-waves/waves.min.css";
import "../../scripts/libs/swiper/swiper-bundle.min.css";
import "../../scripts/libs/flatpickr/flatpickr.min.css";
import "../../scripts/libs/@simonwep/pickr/themes/nano.min.css";
import "../../scripts/libs/choices.js/public/assets/styles/choices.min.css";
---

<script is:inline lang="js">
    if (localStorage.vyzordarktheme) {
        document.querySelector("html").setAttribute("data-theme-mode", "dark");
    }
    if (localStorage.vyzorrtl) {
        document.querySelector("html").setAttribute("dir", "rtl");
        document
            .querySelector("#style")
            ?.setAttribute(
                "href",
                "../../scripts/libs/bootstrap/css/bootstrap.rtl.min.css",
            );
    }
    if (localStorage.vyzorltr) {
        document.querySelector("html").setAttribute("dir", "ltr");
        document
            .querySelector("#style")
            ?.setAttribute(
                "href",
                "../../scripts/libs/bootstrap/css/bootstrap.min.css",
            );
    }
    let html = document.querySelector("html");
    if (window.innerWidth < 992) {
        html.setAttribute("data-toggled", "close");
    }
</script>
